{
  "name": "ephemeral-chat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:client": "tsc -b && vite build",
    "build:server": "cd server && npm install && npm run build",
    "build": "npm run build:client && npm run build:server",
    "lint": "eslint .",
    "preview": "vite preview",
    "server:dev": "cd server && npm install && npm run dev",
    "server:start": "cd server && npm install && npm start",
    "start:dev": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "start": "npm run build && npm run server:start"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.3",
    "@types/crypto-js": "^4.2.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shadcn-ui": "^0.9.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/socket.io": "^3.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
